[flake8]
max-line-length = 120
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    autonomous_discoveries,
    .pytest_cache,
    htmlcov

per-file-ignores =
    __init__.py:F401

max-complexity = 15
