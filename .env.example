# Orion Octave Cubes - Environment Configuration
# Copy this file to .env and customize for your environment

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Security (REQUIRED in production)
# Generate with: python3 -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=

# Analysis Limits
MAX_SIDE_LENGTH=100
MIN_SIDE_LENGTH=0.01
MAX_DISTANCE_PAIRS=100000
MAX_DIRECTION_PAIRS=100000

# Cache Configuration
CACHE_MAX_SIZE=100

# Logging
LOG_LEVEL=INFO

# Production Example:
# FLASK_ENV=production
# FLASK_DEBUG=false
# SECRET_KEY=your-secret-key-here
# MAX_DISTANCE_PAIRS=50000
# MAX_DIRECTION_PAIRS=25000
# LOG_LEVEL=WARNING
